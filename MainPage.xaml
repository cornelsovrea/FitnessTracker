<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.MainPage"
             Title="Exercise Tracker">

    <StackLayout Padding="10">
        <Button Text="Add Exercise" Clicked="OnAddExerciseClicked" HorizontalOptions="Center" />

        <ListView x:Name="exerciseListView"
                  Margin="10"
                  ItemSelected="OnExerciseSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Duration, StringFormat='{0} minutes'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
